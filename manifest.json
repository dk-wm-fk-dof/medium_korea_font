{
    "manifest_version": 3,
    
    "name": "Medium korea font",
    "description": "change medium font-family for korean user",
    "version": "1.6",
    "manifest_version": 2,
    "background" : {
       "scripts": ["background.js"],
       "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://medium.com/*", "https://medium.com/*"],
            "css": ["korea_font_family.css"],
            "js": ["webfont.js","content.js"]
        }
    ],
    "page_action": {
        "default_icon": "icon.png",
        "default_title": "Medium korea font"
    },
    "permissions": [ "declarativeContent", "fontSettings" ],
    "icons": { "16": "icon-16.png",
           "48": "icon-48.png",
          "128": "icon-128.png" }
}